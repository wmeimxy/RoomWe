<block wx:if="{{true}}">

<view style = "text-align: center; margin: 5mm;"> Have you ever took MBTI Personality Test before? </view>

<view class="section">
  <view style = "text-align: left; margin: 5mm;">
  <pre>
  If yes,
  plese select your personality type:</pre>
</view>
</view>

<view style="margin : 5mm">your personality is </view>

<picker style="margin : 5mm" mode="selector" range="{{personalities}}" value="{{index}}" bindchange="changeValue">
   <text>{{personalities[index]}}</text>
</picker>


<view style = "text-align: center; margin: 5mm;"> Or </view>

<view>
      <button 
          type="primary"
          size="{{primarySize}}"
          loading="{{loading}}"
          plain="{{plain}}"
          disabled="{{disabled}}"
          bindtap="gotombti"
          >take the test now </button>
</view>
</block>