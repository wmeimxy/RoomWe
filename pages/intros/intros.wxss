@font-face{
	font-family: 'Nunito', sans-serif;
	src: url("https://fonts.googleapis.com/css2?family=Nunito:wght@200;600&display=swap");
}

.body{
  background-color: #5C4DB1;
  position: fixed;
  height:100%;
  width:100%;
  display: flex;
  flex-direction: column;
}

.main-content{
  margin-top: 200rpx;
  margin-left: 35rpx;
  margin-right: 35rpx;
  margin-bottom: 35rpx;
}
.title{
  display:block;
  font-size: 35px;
  font-weight: bold;
  color: #FFBF67;
  margin-bottom: 50rpx;
}
.subtitle{
  display:block;
  color:white;
  font-size: 20px;
  margin-bottom: 40rpx;
}
.items{
  font-size: 15px;
  color: white;
  margin-bottom: 40rpx;
}

.btn{
  border-radius: 20px;
  background-color: white;
  margin: 20rpx;
}

.button-hover{
  background-color: #FFBF67;
}

.placeholder{
  color: #A7A7A7;
}

.input{
border: solid 1px white;
padding: 5px;
border-radius: 10px;
color: #FFBF67;
margin-left: 40rpx;
margin-top: 20rpx;
}

.next{
  display: block;
  background-color: #DFDEFF;
  margin-top: 100rpx;
  border-radius: 10rpx;
}

.iconusecont-div {
  display: block;
  text-align: center;
  margin: 20rpx;
}

.flex-item {
  display: inline-block;
  width: 300rpx;
  height: 80rpx;
  font-size: 35rpx;
  text-align: center;
  border-radius: 50rpx;
  background-color: #fff;
  color: black;
}

.campus {
  padding-top: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.active-tag .flex-item {
  background: #FFBF67;
  color: #5C4DB1;
}
