@font-face{
	font-family: 'Nunito', sans-serif;
	src: url("https://fonts.googleapis.com/css2?family=Nunito:wght@200;600&display=swap");
}

.body{
  background-color: #5C4DB1;
  width:100%;
  display: flex;
  flex-direction: column;
  font-family: 'Nunito'
}

.main-content{
  margin-top: 35rpx;
  margin-left: 35rpx;
  margin-right: 35rpx;
  margin-bottom: 35rpx;
}

.title{
  display:block;
  font-size: 70rpx;
  font-weight: bold;
  color: #FFBF67;
  margin-bottom: 20rpx;
}
.subtitle{
  display:block;
  color:white;
  font-size: 35rpx;
  margin-bottom: 60rpx;
  font-weight: 250;
}
.question{
  margin-top: 20rpx;
  font-size: 40rpx;
  color: white;
  font-weight: blod;
  margin-bottom: 20rpx;
  display: block;
}

.item1{
  clear: both;
  float: left;
  width: 50%;
  margin-bottom: 80rpx;
}
.item2{
  float: left;
  width: 50%;
  margin-bottom: 80rpx;
}
.picker{
  width: 90%;
  color:black;
  border-radius: 20rpx;
  height: 60rpx;
  box-shadow: 0 5rpx 10rpx 1rpx #282828;
  background-color: white;
}

.picker-text{
  position: absolute;
  display: block;
  font-size: 17px;
  margin: auto;
  margin-left: 30rpx;
  margin-top: 10rpx;
}
.sign-setting-border{
  margin-left: 3%;
  margin-right: 3%;
  margin-bottom: 50rpx;
  margin-top: 20rpx;
  width:80%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 20rpx;
  background-color: #ffffff;
  color: black;
  text-align: center;
  box-shadow: 0 5rpx 10rpx 1rpx #282828;
  }

  .selected{
    background-color: #FFBF67;
    color: #5C4DB1
  }

  .description{
  margin-left: 2%;
  margin-bottom: 50rpx;
  margin-top: 20rpx;
  width:100%;
  height: 80rpx;
  color: white;
  }

  .item{
    display: flex;
  }

  .checkbox{
    width: 280rpx;
    height: 80rpx;
    line-height: 80rpx;
    color: black;
    border-radius: 20rpx;
    background-color: white;
    display: inline-block;
    margin: 3% 3% 3% 3% ;
    position: relative;
    box-shadow: 0 5rpx 10rpx 1rpx #282828;
    text-align: center;
   }

   .checked{
    color:#5C4DB1;
    background-color: #FFBF67;
   }
   .checkbox checkbox{
    display: none
   }

   .btn{
     background-color: #FFBF67 ;
     color: #5C4DB1;
     border-radius: 20rpx;
     box-shadow: 0 5rpx 10rpx 1rpx #282828;
     height: 80rpx;
    line-height: 80rpx;
    margin: auto;
    margin-top: 80rpx;
    width: 90%;
    text-align: center;
    font-weight: 500;
   }
   .cancel{
     color: white;
     font-weight: 250;
     margin-top: 10rpx;
     margin-bottom: 50rpx;
     text-align: center;
   }
   .cancel-hover{
      color: #A7A7A7;
   }
   .name_input{
     border: solid 0.5px #A7A7A7;
     border-radius: 20rpx;
     padding: 5rpx;
     padding-left: 10rpx;
     padding-right: 10rpx;
     margin-bottom: 50rpx;
   }